<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
    <style name="ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>
    <style name="SignActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/signbackground</item>
    </style>
    <style name="SignUpTheme" >
        <item name="android:layout_width"></item>
        <item name="android:layout_height"></item>
        <item name="android:layout_weight"></item>
        <item name="android:textSize">@android:color/white</item>
        <item name="android:textColor"></item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

</resources>
